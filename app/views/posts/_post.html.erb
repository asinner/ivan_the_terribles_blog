<% cache post do %>
	<section class="post">
	  <h2>Post <%= "#{post.id}: #{post.title}" %></h2>
	  <div class="post"><%= post.body %></div>
		<div class="post_nav">
		  <%= link_to 'Show', post %> |
		  <%= link_to 'Edit', edit_post_path(post) %> |
		  <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %>
		</div>
		
		<%= render post.comments %>
		
	</section>
<% end %>